{
  "name": "@aldra-consulting/auth-rest-api",
  "version": "0.0.0",
  "description": "An OpenID Connect authorization server.",
  "repository": {
    "type": "git",
    "url": "git@github.com:aldra-consulting/auth-rest-api.git"
  },
  "contributors": [
    {
      "name": "Alexander Zakharov (azaxarov)",
      "email": "alexander.zakharov@aldra.no"
    }
  ],
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "build": "run-s clean:lib typescript:compile",
    "clean:coverage": "rm -rf coverage",
    "clean:lib": "rm -rf lib",
    "commit": "cz",
    "debug": "run-s serve:debug",
    "lint": "run-p lint:eslint",
    "lint:eslint": "eslint --ext tsx,ts,jsx,js,json .",
    "lint:eslint:fix": "eslint --ext tsx,ts,jsx,js,json . --fix",
    "lint:eslint:staged:fix": "eslint --ext tsx,ts,jsx,js,json . --fix",
    "lint:fix": "run-p lint:eslint:fix",
    "lint:staged:fix": "run-p lint:eslint:staged:fix -- {@}",
    "serve:debug": "NODE_ENV=development DEBUG=oidc-provider:* tsx watch --inspect src/app.ts",
    "serve:dev": "NODE_ENV=development tsx watch src/app.ts",
    "serve:prod": "node lib/app.js",
    "start": "run-s serve:dev",
    "test": "run-s clean:coverage test:jest",
    "test:coverage": "run-s clean:coverage test:jest:coverage",
    "test:jest": "jest --passWithNoTests",
    "test:jest:coverage": "jest --passWithNoTests --coverage",
    "test:watch": "jest --passWithNoTests --watchAll",
    "typescript:compile": "tsc -p tsconfig.lib.json"
  },
  "dependencies": {
    "@aws/dynamodb-auto-marshaller": "^0.7.1",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "aws-sdk": "^2.799.0",
    "jose": "^4.7.0",
    "koa-body": "^6.0.1",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^7.0.2",
    "oidc-provider": "^8.2.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@aldra-consulting/eslint-config-typescript": "^1.0.1",
    "@aldra-consulting/typescript-config": "^1.0.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.1",
    "@types/koa-compress": "^4.0.4",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.0.0",
    "@types/oidc-provider": "^8.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.1",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "semantic-release": "^21.0.2",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  }
}
